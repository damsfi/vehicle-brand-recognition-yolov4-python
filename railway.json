{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && bash bin/download_weights"
  },
  "deploy": {
    "startCommand": "gunicorn --config gunicorn_config.py api_server_production:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

